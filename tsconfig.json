{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "declaration": true, // Ensure declaration files are generated
    "declarationDir": "dist", // Where to output .d.ts files
    "outDir": "dist", // Where to output compiled files
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"] // Include all relevant TypeScript files
}
